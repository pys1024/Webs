git config --global alias.lgg "log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %Cgreen(%cr) %C(bold blue)<%an>%Creset %n%f%n' --abbrev-commit --all"
git config --global alias.lg "log --graph --all --decorate --color"

git config --global color.status always
git config --global color.diff always
git config --global color.branch always
git config --global color.interactive always

